@{
    ViewBag.Title = "NEXRAD Viewer";
}

<main>
    <div class="row p-2 justify-content-lg-center">
        <div class="col-lg-4">
            <select class="form-control" id="radar-file">
                <option>Please Select</option>
                <option value="KLTX_202512011937z">KLTX_202512011937z</option>
            </select>
        </div>
        <div class="col-lg-1">
            <button id="run-radar-loop" class="btn btn-light">Run!</button>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-lg-auto main-canvas-container">
            <canvas class="main-canvas" id="main-canvas"></canvas>
        </div>
    </div>
</main>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="toast-message" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">NEXRAD Web Plotter</strong>
            <small>Just now...</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/math.js"></script>
    <script type="text/javascript" src="~/Scripts/radar-reader.js"></script>
}